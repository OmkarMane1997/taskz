<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/css/bootstrap.min.css"
        integrity="sha512-Ez0cGzNzHR1tYAv56860NLspgUGuQw16GiOOp/I2LuTmpSK9xDXlgJz3XN4cnpXWDmkNBKXR/VDMTCnAaEooxA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-success">
        <div class="container">
            <a href="/" class="navbar-brand">TaskZ</a>
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="menu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/create" class="nav-link">Create</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3 class="display-3 text-success">Task list </h3>
            </div>
        </div>
        <div class="row">

            <% tasks.forEach((item,index) =>{ %>
                <div class="col-md-4 mt-2">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="text-center"><%=item.title  %> </h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <details>
                                        <summary>Content</summary>
                                        <p class="text-justify"><%=item.content  %>  </p>
                                    </details>
                                </li>
                                <li class="list-group-item">
                                    <strong class="text-success">Start Date</strong>
                                    <span class="float-end badge  bg-success"> <%=item.start %> </span>
                                </li>
                                <li class="list-group-item">
                                    <strong class="text-danger">End Date</strong>
                                    <span class="float-end  badge bg-danger"> <%=item.end %> </span>
                                </li>
                                <li class="list-group-item">
                                    <strong class="text-primary"> Created By</strong>
                                    <span class="float-end"> <%=item.user %> </span>
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer">
                            <a href="/edit/<%=item._id  %>" class="btn btn-sm btn-outline-info">Edit</a>
                            <a href="/delete/<%=item._id  %>" class="btn btn-sm btn-outline-danger float-end">Delete</a>
                        </div>
                    </div>
                </div>

            <% })%>

        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/js/bootstrap.bundle.min.js"
        integrity="sha512-sH8JPhKJUeA9PWk3eOcOl8U+lfZTgtBXD41q6cO/slwxGHCxKcW45K4oPCUhHG7NMB4mbKEddVmPuTXtpbCbFA=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>

</html>